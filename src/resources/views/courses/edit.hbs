<form class='mt-4' method='POST' action='/courses/{{course._id}}?_method=PUT'>
    <div class='form-group'>
        <label for='name'>Course name</label>
        <input
            type='text'
            value='{{course.name}}'
            name='name'
            class='form-control'
            id='name'
        />
    </div>
    <div class='form-group'>
        <label for='description'>Desc</label>
        <textarea
            type='text'
            name='description'
            class='form-control'
            id='description'
        >{{course.description}}</textarea>
    </div>
    <div class='form-group'>
        <label for='image'>Image</label>
        <input
            type='text'
            value='{{course.image}}'
            name='image'
            class='form-control'
            id='image'
        />
    </div>
    <div class='form-group'>
        <label for='videoId'>Video</label>
        <input
            type='text'
            value='{{course.videoId}}'
            name='videoId'
            class='form-control'
            id='videoId'
        />
    </div>
    <button type='submit' class='btn btn-primary'>Sửa khóa học</button>
</form>