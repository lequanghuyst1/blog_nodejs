<div class='mt-4'>
    <div class='row'>
        {{#each courses}}
            <div class='col-sm-6 col-lg-3'>
                <div class='card card-course-item'>
                    <a href='/course/{{this.slug}}'>
                        <img
                            class='card-img-top'
                            src='{{this.image}}'
                            alt='Card image cap'
                        />
                    </a>
                    <div class='card-body'>
                        <a href='/course/{{this.slug}}'>
                            <h5 class='card-title'>{{this.name}}</h5>
                            <p class='card-text'>{{this.desc}}</p>
                            <a href='#' class='btn btn-primary'>Mua khóa học</a>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>